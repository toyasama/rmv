{
    "name": "RMV Chore",
    "build": {
        "dockerfile": "../docker/Dockerfile",
        "context": "..",
        "args": {},
        "options": [
            "--tag=rmv_chore:latest"
        ]
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "editor.formatOnSave": true
            },
            "extensions": [
                "ms-python.python",
                "ms-vscode.cpptools",
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    "postCreateCommand": "colcon build && . install/setup.bash",
    "remoteUser": "devuser",
    "workspaceFolder": "/home/devuser/workspace",
    "mounts": [
        "source=${localWorkspaceFolder},target=/home/devuser/workspace,type=bind,consistency=cached",
        "source=${localEnv:HOME}/.ssh,target=/home/devuser/.ssh,type=bind",
        "source=rmv-bashhistory,target=/home/devuser/.bash_history,type=volume"
    ],
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    },
    "containerEnv": {
        "DISPLAY": "${localEnv:DISPLAY}",
        "QT_X11_NO_MITSHM": "1",
        "XAUTHORITY": "${localEnv:XAUTHORITY}",
        "HOST_USER": "${localEnv:USER}"
    },
    "runArgs": [
        "--name=rmv_chore_dev_container",
        "--net",
        "host",
        "-e",
        "DISPLAY=${env:DISPLAY}",
        "-v",
        "/tmp/.X11-unix:/tmp/.X11-unix",
        "-v",
        "${env:HOME}/.Xauthority:${env:HOME}/.Xauthority"
    ]
}