{
    "name": "RMV Chore",
    "build": {
        "dockerfile": "../docker/Dockerfile",
        "context": "..",
        "args": {},
        "options": [
            "--tag=rmv_chore:latest"
        ]
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "editor.formatOnSave": true
            },
            "extensions": [
                "ms-python.python",
                "ms-vscode.cpptools",
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    "postCreateCommand": "colcon build && . install/setup.bash",
    "remoteUser": "devuser",
    "workspaceFolder": "/home/devuser/workspace",
    "mounts": [
        "source=${localWorkspaceFolder},target=/home/devuser/workspace,type=bind,consistency=cached"
    ],
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    },
    "runArgs": [
        "--name=rmv_chore_dev_container"
    ]
}