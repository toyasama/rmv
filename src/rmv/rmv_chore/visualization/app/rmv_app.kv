#:kivy 1.0.9

<Rmv>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: [0.3, 0.3, 0.3, 1]
            Rectangle:
                size: self.size
                pos: self.pos
        
        ControlPanel:
            size_hint_x: 0.2

        BoxLayout:
            size_hint_y: 0.95
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                Image:
                    size_hint: 0.9, 0.9
                    id: video_feed
                    allow_stretch: True
                    keep_ratio: True
